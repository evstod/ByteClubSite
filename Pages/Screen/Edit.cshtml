@page
@model ByteClubSite.Pages.Screen.EditModel
@{
}

<br />
<h2></h2>
<h2 class="text-info">Edit Post</h2>
<br />

<div class="border container" style="padding:20px">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Agenda.Id" />
        <input type="hidden" asp-for="Agenda.Class" />
        <input type="hidden" asp-for="Agenda.StartTime" />
        <input type="hidden" asp-for="Agenda.StartLate" />
        <input type="hidden" asp-for="Agenda.StartEarlyDismiss" />
        <input type="hidden" asp-for="Agenda.StartActivity" />
        <h4 class="text-light">Period @Model.displayPeriod</h4>
        <h2 class="text-light">@Model.displayClass</h2>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Agenda.Body" class="text-light"></label>
            </div>
            <div class="col-6">
                <textarea rows="10" cols="90" asp-for="Agenda.Body" class="form-control"></textarea>
            </div>
            <br />
            <span asp-validation-for="Agenda.Body" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Upload" class="text-light"></label>
            </div>
            <div class="col-6">
                <input type="file" multiple asp-for="Upload" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Upload" class="text-danger"></span>
        </div>
        <p class="text-warning">Note: HTML media tags (img, video, etc.) must source to "img/uploads/(Image Name)"</p>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Manage" class="btn btn-success form-control">Back to Agenda Manage</a>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
